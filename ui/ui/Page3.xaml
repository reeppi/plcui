<Page x:Class="ui.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ui"
      xmlns:p="clr-namespace:libPLC;assembly=libPLC"
      mc:Ignorable="d" 
     Width="{StaticResource frameW}" Height="{StaticResource frameH}" 
      Title="Page1" 
      HorizontalAlignment="Left" 
      VerticalAlignment="Top" 
      x:Name="page"
      KeepAlive="True" Loaded="page_Loaded"
      Style="{StaticResource defaultStylePage}"
      >

    <Canvas>
        <p:recipeControl  x:Name="variablesC"  DgvType="variables"  DirControl="{Binding ElementName=dirC}" FilePath="{Binding SelectedFile, ElementName=dirC}" Height="480" Width="618"/>
        <p:dirControl x:Name="dirC"  IniName="PLC"  Dir="plc" Canvas.Left="623" Canvas.Top="10" Height="112" Width="90"/>
        <Button x:Name="buttonReloadConnection" Click="buttonReloadConnection_Click" Content="Reload" Canvas.Left="623" Canvas.Top="426" Width="90" Height="42"/>
        <p:plcButton x:Name="TestiVar" Text="PLC1 &#xA;Var1" Right="False"  Input="{Binding plc[1].tags[.bVar1]}"   CType="toggle"  Canvas.Left="623" Canvas.Top="127" Width="90" Height="93"/>
        <Button x:Name="buttonRefresh" Content="Refresh" Canvas.Left="623" Canvas.Top="375" Width="90" Height="30" Click="buttonRefresh_Click"/>
        <Button x:Name="buttonAddWatch" Content="AddWatch" Height="40" Canvas.Left="623" Canvas.Top="225" Width="90" Click="buttonAddWatch_Click"/>
        <p:plcButton Text="Testi" Right="False"  Input="{Binding plc[1].tags[.bVar2]}"   CType="toggle" Canvas.Top="127" Width="90" Canvas.Left="732" Height="58"/>
        <Button x:Name="buttonAddChart" Content="AddScope" Height="40" Canvas.Left="623" Canvas.Top="270" Width="90" Click="buttonAddChart_Click"/>

    </Canvas>
</Page>
