<UserControl x:Class="libPLC.plcImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:libPLC"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="26"
             Loaded="indicatorImageOn_Loaded">
    <Grid>
        <Image x:Name="indicatorImageOn" Source="img/indicatorOn.png" Opacity="0"/>
        <Image x:Name="indicatorImageOff" Source="img/indicatorOff.png" Opacity="1"/>
    </Grid>
</UserControl>
